<div class="pt-3"><h1> Sign in </h1></div>

<%= form_with url:sign_in_path do |form| %>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control", placeholder: "louise@mail.com" %>
    </div>
    <div class="mb-1">
        <%= form.label :password %>
        <%= form.password_field :password, class:"form-control" %>
    </div>
    <div class="mb-3"><%= link_to "Forgot your password?", password_reset_path %></div>
    <div class="mb-3">
        <%= form.submit "Sign in", class:"btn btn-outline-info" %>
    </div>
<% end %>